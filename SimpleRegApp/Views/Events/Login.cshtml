@model SimpleRegApp.Models.Account

@{
    ViewData["Title"] = "Login";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<h1 style="font-weight:400; font-family:'Times New Roman', Times, serif ">Login Page</h1>
<div class="card" style="display:flex; justify-content:center">
    <div class="card-header">
        <h2 style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Login</h2>
        <div class="card-body" style="background-color:#97108661">
            <form asp-action="Login" method="post">

                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Login As</label><br />
                    <input type="radio" asp-for="Role" value="Admin" />
                    <label for="admin" class="me-3">Admin</label>

                    <input type="radio" asp-for="Role" value="User" />
                    <label for="user">User</label>

                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

               

                <br />
                <br />
                <button type="submit" class="btn btn-primary">Login</button>

            </form>

            <div>
                <a asp-action="Register" class="btn btn-link">Don't have an account? Register here.</a>
            </div>
        </div>
    </div>
</div>