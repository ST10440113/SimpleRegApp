@model IEnumerable<SimpleRegApp.Models.Events>

@{
    ViewData["Title"] = "Index";
}

<h1>Events</h1>


<p>
    
    <form asp-controller="Events" asp-action="Create">
        <button type="submit" class="btn btn-outline-info" style="font-size:14px">Create New</button>
    </form>
</p>

<div style="display:flex;flex-direction:row; flex-wrap:wrap">
@foreach (var item in Model)
{
        <div class="card bg-dark text-white shadow border-light" style="height: 300px; width: 280px; overflow: hidden; margin:30px">
            <div class="card-body p-3 d-flex flex-row justify-content-between">
                <div>
                    <h6 class="card-title text-white mb-2">@item.EventName</h6>
                    <hr />
                    <p class="mb-1">Description: <strong>@item.Description</strong></p>
                    <p class="mb-1">Date and time: <strong>@item.Date</strong></p>
                    <p class="mb-1">Event Type: <strong>@item.Type</strong></p>
                </div>



            </div >
            <div style="display:flex; flex-direction:row; justify-content: space-around; margin:10px;padding-bottom:10px ">
            <form asp-controller="Events" asp-action="Edit" asp-route-id="@item.EventId" method="get">
                <button type="submit" class="btn btn-outline-info" style="font-size:14px">Edit</button>
            </form>
            <form asp-controller="Events" asp-action="Details" asp-route-id="@item.EventId" method="post">
                <button type="submit" class="btn btn-outline-info" style="font-size:14px">Details</button>
            </form>
            <form asp-controller="Events" asp-action="Delete" asp-route-id="@item.EventId" method="post">
                <button type="submit" class="btn btn-outline-info" style="font-size:14px">Delete</button>
            </form>
            </div>
        </div>


    }
</div>
