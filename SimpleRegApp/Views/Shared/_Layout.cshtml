@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleRegApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SimpleRegApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-black border-bottom box-shadow small">
            <div class="container-fluid">
                <a class="navbar-brand text-uppercase">Event App</a>
                @{
                    var username = Context.Session.GetString("Username");
                    var role = Context.Session.GetString("Role");
                    var firstName = Context.Session.GetString("FirstName");
                }
                <div class="collapse navbar-collapse">                 
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @if (username != null)
                        {
                            if (role == "Admin")
                            {
                                <li class="nav-item">
                                <a class="nav-link text-white fw-semibold" asp-controller="Events" asp-action="Index">Events</a>
                                </li>
                            }
                            else if (role == "User")
                            {
                                <li class="nav-item">
                               <a class="nav-link text-white fw-semibold" asp-controller="Events" asp-action="UserIndex">Events </a>
                                </li>
                            }
                        }

                    </ul>

                    <div class="d-flex align-items-center gap-2">
                        @if (username != null)
                        {
                            <span class="text-white small me-2"> Hello, @firstName!</span>

                            <form asp-controller="Events" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-outline-light btn-sm px-3" type="submit">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-info btn-sm px-3"asp-controller="Events" asp-action="Login">Login</a>

                            <a class="btn btn-outline-info btn-sm px-3" asp-controller="Events" asp-action="Register">Register</a>
                        }

                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - SimpleRegApp -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>